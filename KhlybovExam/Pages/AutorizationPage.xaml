<Page
    x:Class="KhlybovExam.Pages.AutorizationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KhlybovExam.Pages"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Title="AutorizationPage">
    <Grid>
        <TextBox
            x:Name="LoginTB"
            HorizontalAlignment="Left"
            Margin="277,141,0,0"
            TextWrapping="Wrap"
            Text="Логин"
            TextAlignment="Center"
            VerticalAlignment="Top"
            Width="218"
            Height="37" />
        <TextBox
            x:Name="PassTB"
            HorizontalAlignment="Left"
            Margin="277,200,0,0"
            TextWrapping="Wrap"
            Text="Пароль"
            TextAlignment="Center"
            VerticalAlignment="Top"
            Width="218"
            Height="37" />
        <Button
            Content="Войти"
            x:Name="SignBtn"
            HorizontalAlignment="Left"
            Background="Coral"
            Margin="341,262,0,0"
            VerticalAlignment="Top"
            Height="29"
            Width="99" 
            Click="SignBtn_Click"/>

    </Grid>
</Page>
